<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Akdeniz Airlines </title>
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="container">
            <img src="~/Content/css/img/akdenizlogo.png" class="logo">

            <nav>
                <ul>
                    <li><a href=@Url.Action("Index","Home")>Home</a></li>
                    <li><a href=@Url.Action("About","Home")>About Us</a></li>
                    <li><a href=@Url.Action("Contact","Home")>Contact</a></li>
                    <li><a href=@Url.Action("Reservation","Home")>Reservation</a></li>

                </ul>

            </nav>
        </div>
    </header>

    <div>
        @RenderBody()
        @RenderSection("Scripts", false)
    </div>
    <footer>
        <img src="~/Content/css/img/kültürlogo.png" alt="kültürlogo" style="width:5%; height:5%; margin-left: 47%;">
        <a href="https://www.iku.edu.tr/"><span style="color:blue; display: flex; justify-content: center;">iku.edu.tr</span></a>

    </footer>

</body>
</html>

